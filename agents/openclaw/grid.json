{
  "$schema": "https://openclaw.ai/schemas/openclaw.json",
  "__comment": "Grid agent â€” systematic market maker. Copy to ~/.openclaw/openclaw.json",

  "llm": {
    "provider": "anthropic",
    "model": "claude-haiku-4-5-20251001",
    "apiKey": "YOUR_ANTHROPIC_API_KEY"
  },

  "gateway": {
    "port": 18789,
    "sessionMode": "per-sender",
    "webUI": true
  },

  "agents": {
    "defaults": {
      "sandbox": false,
      "name": "grid",
      "systemPrompt": "You are Grid, a systematic market-making agent. Read your SOUL.md for your full identity, trading philosophy, grid management rules, and risk parameters. You trade SOL-PERP on Drift Protocol using the perpsclaw skill."
    }
  },

  "skills": {
    "entries": {
      "perpsclaw": {
        "enabled": true,
        "env": {
          "SOLANA_RPC_URL": "https://devnet.helius-rpc.com/?api-key=YOUR_HELIUS_KEY",
          "AGENT_PRIVATE_KEY": "YOUR_GRID_BASE58_PRIVATE_KEY",
          "NETWORK": "devnet",
          "MAX_LEVERAGE": "2",
          "BUDGET": "2",
          "STOP_LOSS_PCT": "0.07",
          "TAKE_PROFIT_PCT": "0.03"
        }
      }
    }
  },

  "security": {
    "allowedTools": ["shell", "filesystem"],
    "maxConcurrentSessions": 2
  }
}
