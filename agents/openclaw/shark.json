{
  "$schema": "https://openclaw.ai/schemas/openclaw.json",
  "_comment": "PerpsClaw Shark agent â€” momentum trader. Deploy to /root/perpsclaw-agents/openclaw-shark/",
  "agents": {
    "defaults": {
      "model": {
        "primary": "openrouter/google/gemini-2.5-flash",
        "fallbacks": ["openrouter/google/gemini-2.5-flash-lite"]
      },
      "workspace": "/root/PerpsClaw",
      "compaction": {
        "mode": "safeguard"
      },
      "maxConcurrent": 1
    }
  },
  "commands": {
    "native": "auto",
    "nativeSkills": "auto"
  },
  "hooks": {
    "internal": {
      "enabled": true,
      "entries": {
        "session-memory": { "enabled": true }
      }
    }
  },
  "gateway": {
    "port": 18789,
    "mode": "local",
    "bind": "0.0.0.0"
  },
  "skills": {
    "install": { "nodeManager": "npm" },
    "entries": {}
  },
  "env": {
    "OPENROUTER_API_KEY": "${OPENROUTER_API_KEY}",
    "AGENT_PRIVATE_KEY": "${SHARK_PRIVATE_KEY}",
    "PERPS_ENV": "/root/PerpsClaw/.env"
  }
}
