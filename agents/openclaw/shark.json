{
  "$schema": "https://openclaw.ai/schemas/openclaw.json",
  "_comment": "PerpsClaw Shark agent config. Copy to ~/.openclaw/openclaw.json and fill in API keys.",
  "agents": {
    "defaults": {
      "model": {
        "primary": "anthropic/claude-sonnet-4-20250514"
      },
      "workspace": "/path/to/PerpsClaw",
      "compaction": {
        "mode": "safeguard"
      },
      "maxConcurrent": 1
    }
  },
  "commands": {
    "native": "auto",
    "nativeSkills": "auto"
  },
  "hooks": {
    "internal": {
      "enabled": true,
      "entries": {
        "session-memory": { "enabled": true }
      }
    }
  },
  "gateway": {
    "port": 18789,
    "mode": "local",
    "bind": "loopback"
  },
  "skills": {
    "install": { "nodeManager": "npm" },
    "entries": {}
  }
}
