FROM node:20-alpine AS base
WORKDIR /app

# Install dependencies
COPY package.json ./
COPY web/package.json ./web/
RUN npm install --workspace=web

# Copy source and build
COPY tsconfig.base.json ./
COPY web/ ./web/

ARG NEXT_PUBLIC_SOLANA_RPC_URL=https://api.devnet.solana.com
ARG NEXT_PUBLIC_NETWORK=devnet
ARG NEXT_PUBLIC_PYTH_HERMES_URL=https://hermes.pyth.network
ARG NEXT_PUBLIC_SHARK_WALLET
ARG NEXT_PUBLIC_WOLF_WALLET
ARG NEXT_PUBLIC_GRID_WALLET

ENV NEXT_PUBLIC_SOLANA_RPC_URL=$NEXT_PUBLIC_SOLANA_RPC_URL
ENV NEXT_PUBLIC_NETWORK=$NEXT_PUBLIC_NETWORK
ENV NEXT_PUBLIC_PYTH_HERMES_URL=$NEXT_PUBLIC_PYTH_HERMES_URL
ENV NEXT_PUBLIC_SHARK_WALLET=$NEXT_PUBLIC_SHARK_WALLET
ENV NEXT_PUBLIC_WOLF_WALLET=$NEXT_PUBLIC_WOLF_WALLET
ENV NEXT_PUBLIC_GRID_WALLET=$NEXT_PUBLIC_GRID_WALLET

RUN npm run build --workspace=web

# Production
FROM node:20-alpine AS runner
WORKDIR /app

ENV NODE_ENV=production

COPY --from=base /app/web/.next/standalone ./
COPY --from=base /app/web/.next/static ./web/.next/static
COPY --from=base /app/web/public ./web/public

EXPOSE 3000
CMD ["node", "web/server.js"]
